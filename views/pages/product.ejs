<%-layout("/layouts/boilerplate.ejs")%>



    <style>
      
    .button-primary,
    .button-secondary {
      display: inline-block;
      margin: 10px auto;
    }
    .main-image div {
      text-align: center;
      margin-top: 20px;
    }
    .button-primary {
      background-color: #1d4ed8;
      color: white;
      padding: 10px 20px;
      border: none;
      border-radius: 5px;
      font-weight: bold;
      cursor: pointer;
      transition: transform 0.2s ease, box-shadow 0.2s ease;
    }
    .button-primary:hover {
      transform: translateY(-2px);
      box-shadow: 0 4px 10px rgba(29, 78, 216, 0.4);
    }
    .button-secondary {
      border: 2px solid #1d4ed8;
      color: #1d4ed8;
      padding: 10px 20px;
      border-radius: 5px;
      font-weight: bold;
      cursor: pointer;
      transition: transform 0.2s ease, box-shadow 0.2s ease;
    }
    .button-secondary:hover {
      background-color: #1d4ed8;
      color: white;
      transform: translateY(-2px);
      box-shadow: 0 4px 10px rgba(29, 78, 216, 0.4);
    }
      .product-section {
        display: flex;
        gap: 40px;
        padding: 40px;
      }
    .sidebar-thumbnails {
      display: flex;
      flex-direction: column;
      align-items: center;
    }
    .sidebar-thumbnails img {
